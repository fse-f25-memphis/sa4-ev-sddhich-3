<h1>Video Games DB</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Publisher</th>
        <th>Genre</th>
        <th></th> 
      </tr>
    </thead>

    <tbody>
      <% @games.each do |g| %>
        <tr>
          <td><%= g.title %></td>
          <td><%= g.year.blank? ? 'N/A' : g.year %></td>
          <td><%= g.publisher.blank? ? 'N/A' : g.publisher %></td>
          <td><%= g.genre.blank? ? 'N/A' : g.genre %></td>
          <td>
            <%= button_to 'delete', video_game_path(g), method: :delete,
                  data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<p>
  <%= link_to 'Create video game', new_video_game_path, class: "btn btn-primary" %>
</p>
